<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 ">
      <%= render 'shared/errors', model: @user, operation: operation %>
      <%= form_with model: @user, data: { turbo: false }, class: "bg-info p-3 mb-3 shadow rounded", local: true do |form| %>

        <div class="row mb-3">
          <%= form.label :username, class: "col-2 form-label text-light" %>
          <div class="col-10">
            <%= form.text_field :username, class: "form-control shadow rounded", placeholder: "Choose a username" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= form.label :email, class: "col-2 form-label text-light" %>
          <div class="col-10">
            <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your e-mail address" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= form.label :password, class: "col-2 form-label text-light" %>
          <div class="col-10">
            <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
          </div>
        </div>

        <div class="row justify-content-center">
          <%= form.submit(@user.new_record? ? "Sign up" : "Update account", class: "col-3 btn btn-outline-light btn-lg") %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="text-center">
    <%= link_to '[ Cancel and return to article listing ]', articles_path, class: "text-info" %>
  </div>
</div>
