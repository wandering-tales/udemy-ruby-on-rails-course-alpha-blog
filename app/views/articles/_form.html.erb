<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 ">
      <%= render 'errors' %>
      <%= form_with model: @article, data: { turbo: false }, class: "bg-info p-3 mb-3 shadow rounded", local: true do |form| %>

        <div class="row mb-3">
          <%= form.label :title, class: "col-2 form-label text-light" %>
          <div class="col-10">
            <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= form.label :description, class: "col-2 form-label text-light" %>
          <div class="col-10">
            <%= form.text_area :description, class: "form-control shadow rounded align-top", style: "height: 200px", placeholder: "Description of article" %>
          </div>
        </div>

        <div class="row justify-content-center">
          <%= form.submit class: "col-3 btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="text-center">
    <%= link_to '[ Cancel and return to article listing ]', articles_path, class: "text-info" %>
  </div>
</div>
